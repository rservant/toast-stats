{
  "name": "backend",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "lint:test": "eslint '**/*.test.ts' '**/__tests__/**/*' --ext .ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:cleanup": "./scripts/cleanup-test-dirs.sh",
    "cleanup:test-dirs": "./scripts/cleanup-test-dirs.sh",
    "typecheck": "tsc --noEmit --skipLibCheck --project tsconfig.json",
    "typecheck:test": "tsc --noEmit --skipLibCheck --project tsconfig.test.json",
    "typecheck:all": "tsc --noEmit --skipLibCheck --project tsconfig.all.json",
    "typecheck:count": "tsc --noEmit --skipLibCheck --project tsconfig.json 2>&1 | grep -E \"error TS[0-9]+\" | wc -l || echo \"0\"",
    "typecheck:count:test": "tsc --noEmit --skipLibCheck --project tsconfig.test.json 2>&1 | grep -E \"error TS[0-9]+\" | wc -l || echo \"0\"",
    "typecheck:count:all": "tsc --noEmit --skipLibCheck --project tsconfig.all.json 2>&1 | grep -E \"error TS[0-9]+\" | wc -l || echo \"0\"",
    "typecheck:errors": "tsc --noEmit --skipLibCheck --project tsconfig.json 2>&1 | grep -E \"error TS[0-9]+\" || echo \"No TypeScript errors found\"",
    "typecheck:errors:test": "tsc --noEmit --skipLibCheck --project tsconfig.test.json 2>&1 | grep -E \"error TS[0-9]+\" || echo \"No TypeScript errors found\"",
    "typecheck:errors:all": "tsc --noEmit --skipLibCheck --project tsconfig.all.json 2>&1 | grep -E \"error TS[0-9]+\" || echo \"No TypeScript errors found\"",
    "emulator:firestore": "firebase emulators:start --only firestore --project demo-project",
    "emulator:firestore:ui": "firebase emulators:start --only firestore --project demo-project",
    "emulator:gcs": "docker run -d --name fake-gcs-server -p 4443:4443 fsouza/fake-gcs-server -scheme http -port 4443",
    "emulator:gcs:stop": "docker rm -f fake-gcs-server || true",
    "emulators:start": "npm run emulator:gcs && firebase emulators:start --only firestore --project demo-project",
    "emulators:stop": "npm run emulator:gcs:stop",
    "test:integration": "FIRESTORE_EMULATOR_HOST=localhost:8080 GCS_EMULATOR_HOST=http://localhost:4443 STORAGE_EMULATOR_HOST=http://localhost:4443 GCP_PROJECT_ID=demo-project GCS_BUCKET_NAME=test-bucket vitest --run",
    "reconciliation:init": "tsx src/scripts/init-reconciliation.ts",
    "reconciliation:migrate": "tsx src/scripts/reconciliation-migrations.ts migrate",
    "reconciliation:rollback": "tsx src/scripts/reconciliation-migrations.ts rollback",
    "reconciliation:status": "tsx src/scripts/reconciliation-migrations.ts status",
    "reconciliation:validate": "tsx src/scripts/reconciliation-migrations.ts validate",
    "clear-rankings-cache": "tsx scripts/clear-rankings-cache.ts",
    "refresh": "tsx src/scripts/refresh-cli.ts",
    "validate-snapshots": "tsx src/scripts/validate-snapshot-integrity.ts",
    "snapshot-debug": "tsx src/scripts/snapshot-debug.ts"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.0",
    "@google-cloud/storage": "^7.16.0",
    "@types/uuid": "^11.0.0",
    "axios": "^1.13.4",
    "commander": "^14.0.3",
    "cors": "^2.8.6",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "uuid": "^13.0.0",
    "vite": "7.3.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^25.2.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "fast-check": "^4.5.2",
    "globals": "^17.3.0",
    "supertest": "^7.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vitest": "^4.0.16"
  }
}
